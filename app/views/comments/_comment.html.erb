<div class="media">
  <% @project.comments.each do |comment| %>
  <div class="media-left">
    <a href="#">
    <%= image_tag(comment.user.gravatar_url,size:'64x64',class: 'media-object')%>
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= comment.user.username %> ...</h4>
    <%= comment.body %>
  </div>
  <% end %>
</div>
